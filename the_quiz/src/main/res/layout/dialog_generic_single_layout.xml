<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/toast_layout_root"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_white_border"
                android:orientation="horizontal"
                android:padding="10dp">

    <RelativeLayout
            android:id="@+id/dialog_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">
        <TextView
                style="@style/home_option_text"
                android:id="@+id/dialog_text"
                android:textIsSelectable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:padding="10dp"
                android:layout_centerInParent="true"
                android:textStyle="bold"/>
    </RelativeLayout>

    <Button android:id="@+id/dialog_button"
            android:layout_width="fill_parent" android:layout_height="50dp"
            android:layout_below="@+id/dialog_text_layout"
            android:textSize="30sp"
            android:clickable="true"
            android:text="@string/general_done_button"
            />

</RelativeLayout>